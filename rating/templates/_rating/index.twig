{% extends "rating/_layouts/elementindex" %}
{% set title = "Ratings"|t('app') %}
{% set elementType = 'craft\\plugins\\rating\\elements\\Rating' %}
{% set showStatusMenu = false %}
{% set showLocaleMenu = false %}

{% block sidebar %}

    <div class="buttons">
        {% if collections|length > 1 %}
            <div class="btngroup submit first">
                <div class="btn submit menubtn add icon">{{ "New Rating"|t }}</div>
                <div class="menu">
                    <ul>
                        {% for collection in collections %}
                            <li>
                                <a href="{{ url(baseCpPath~'/'~collection.handle~'/new') }}">{{ collection.name|t('app') }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% else %}
            <a class="btn submit add icon"
               href="{{ url(baseCpPath~'/'~collections[0].handle~'/new') }}">{{ "New Rating"|t('app') }}</a>
        {% endif %}
    </div>

    {{ parent() }}

{% endblock %}

{% if groupHandle is defined %}
    {% registerjs %}
    window.defaultGroupHandle = '{{ groupHandle }}';
    {% endregisterjs %}
{% endif %}
